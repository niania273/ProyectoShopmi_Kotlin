<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp" android:layout_marginVertical="8dp" app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="@drawable/bg_estado_true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="true"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Marca"
            android:textColor="#666"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nombre del producto"
            android:textColor="#222"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="DescripciÃ³n breve del producto"
            android:textColor="#666"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="S/. 00.00"
            android:textColor="#FF6F00"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarCarrito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:text="Agregar al carrito"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                app:backgroundTint="#FF6F00"
                app:cornerRadius="8dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layoutBotonesAdicionales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActualizar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Actualizar"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:minWidth="0dp"
                    android:paddingHorizontal="4dp"
                    android:textAllCaps="false"
                    android:textColor="#888888"
                    app:strokeColor="#888888"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    android:backgroundTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDesactivar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Desactivar"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:minWidth="0dp"
                    android:paddingHorizontal="4dp"
                    android:textAllCaps="false"
                    android:textColor="#FFBB00"
                    app:strokeColor="#FFBB00"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    android:backgroundTint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>