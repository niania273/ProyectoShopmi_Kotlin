<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="8dp"
            android:background="@drawable/bg_estado"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Disponible"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <!-- Imagen del producto -->
            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />


        </FrameLayout>

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nombre del producto"
            android:textColor="#222"
            android:textSize="17sp"
            android:textStyle="bold"
            android:maxLines="2" />

        <!-- Descripción del producto -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descripción breve del producto"
            android:textColor="#666"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Marca"
            android:textColor="#666"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="S/. 00.00"
            android:textColor="#FF6F00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Actualizar"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="0dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:textColor="#888888"
                app:strokeColor="#888888"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDesactivar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Desactivar"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="0dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:textColor="#FFBB00"
                app:strokeColor="#FFBB00"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
